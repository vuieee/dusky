// vertical_nerdy_compact
{
    // ===================================================================
    // PRECISION THIN VERTICAL (Width 10)
    // ===================================================================
    "layer": "top",
    "position": "left",
    "spacing": 0,
    "width": 10,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": -2,
    "margin-right": 0,
    "fixed-center": true,
    "reload_style_on_change": true,

    // ===================================================================
    // MODULE ORDERING
    // ===================================================================
    "modules-left": [
        "battery",
        "pulseaudio",
        "backlight",
        "cpu",
        "memory",
        "temperature"
    ],
    
    "modules-center": [
        "hyprland/workspaces"
    ],
    
    "modules-right": [
        "custom/theme",
        "bluetooth",
        "custom/app-tray",
        "custom/network",
        "custom/inhibit-suspend",
        "custom/notification",
        "clock",
        "custom/power"
    ],

    // ===================================================================
    // HARDWARE MODULES
    // ===================================================================

    "hyprland/workspaces": {
        "on-click": "activate",
        "all-outputs": true,
        "sort-by-number": true,
        "format": " ",

        "persistent-workspaces": {
             "*": 4
        },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },

    "battery": {
        // Vertical stacking required for 10px width
        "format": " {icon}\n{capacity}\n{power:.0f}W",
        "format-charging": " ÔÉß\n+{capacity}\n{power:.0f}W",
        "format-plugged": "Ôá¶\n{capacity}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "interval": 10,
        "states": {
            "warning": 40,
            "critical": 20
        },
        "tooltip-format": "{timeTo}\nHealth Û±ü¶ {health}%\nPower Draw {power:.2f} W",
        "on-click": "uwsm-app -- kitty --class power_saver.sh --hold -e \"$HOME/user_scripts/battery/power_saving/power_saver.sh\"",
        "on-click-right": "uwsm-app -- kitty --class timeout.sh -e \"$HOME/user_scripts/hypridle/timeout.sh\""
    },

    "pulseaudio":{
        "format": "{icon}\n{volume}",
        "format-muted": "Û∞ñÅ",
        "on-click": "uwsm-app -- pavucontrol",
        "on-click-middle": "swayosd-client --output-volume mute-toggle",
        "on-click-right": "uwsm-app -- kitty --class cava -e cava",
        "on-scroll-up": "swayosd-client --output-volume raise",
        "on-scroll-down": "swayosd-client --output-volume lower",
        "format-icons": ["Û∞ñÅ", "ÔÄß", "ÔÄ®"],
        "tooltip": true,
        "tooltip-format": "{desc}\n\nLMB: pavucontrol\nRMB: cava\nMMB: Mute"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}\n{percent}",
        "format-icons": ["Óéç","Óèî","Óèì","Óèí","Óèë","Óèê","Óèè","Óèé","Óèç","Óèå","Óèã","Óèä","Óèâ","Óèà","Óéõ"],
        "tooltip": true,
        "tooltip-format": "LMB: Brightness Slider\nRMB: hyprsunset Slider\nMMB: Shaders",
        "on-click": "uwsm-app -- \"$HOME/user_scripts/sliders/brightness_slider.sh\"",
        "on-click-right": "uwsm-app -- \"$HOME/user_scripts/sliders/hyprsunset_slider.sh\"",
        "on-click-middle": "uwsm-app -- \"$HOME/user_scripts/rofi/shader_menu.sh\"",
        "on-scroll-up": "swayosd-client --brightness raise",
        "on-scroll-down": "swayosd-client --brightness lower",
        "min-length": 4,
        "interval": 60
    },

    "cpu": {
        "format": "Ó∞ô\n{usage}",
        "tooltip": true,
        "on-click": "uwsm-app -- kitty --class htop -e htop",
        "on-click-right": "uwsm-app -- kitty --class sysbench_benchmark.sh -e \"$HOME/user_scripts/performance/sysbench_benchmark.sh\"",
        "tooltip-format": "CPU: {usage}%\nAvg Freq: {avg_frequency}GHz",
        "interval": 2
    },

    "memory": {
        "format": "ÔÇÄ\n{percentage}",
        "interval": 2,
        "on-click": "uwsm-app -- kitty --class io_monitor.sh -e \"$HOME/user_scripts/drives/io_monitor.sh\"",
        "states": {
           "critical": 80
        },
        "tooltip": true,
        "tooltip-format":"Used {used} GiB\nAvail {avail} Gib\nSwap {swapUsed} GiB"
    },

    "temperature": {
        // FIXED: thermal-zone must be an integer, not a path
        "thermal-zone": 6, 
        "critical-threshold": 65,
        "format-critical": "üî•\n{temperatureC}",
        "format": "Ôãâ\n{temperatureC}",
        "interval": 2,
        "tooltip-format": "Package: {temperatureC}¬∞C"
    },

    "bluetooth": {
        "format": "Ôäî",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Ôäî",
        "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "uwsm-app -- blueman-manager",
        "on-click-right": "uwsm-app -- kitty --class bluetui -e bluetui"
        // Removed interval: Bluetooth is event driven
    },

    "clock": {
        "format": "{:%I\n%M}",
        "tooltip-format": "<big>{:%A, %d %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 60,
        "on-click": "uwsm-app -- gnome-clocks",
        "on-click-middle": "uwsm-app -- kitty --class peaclock -e peaclock",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    // ===================================================================
    // CUSTOM MODULES
    // ===================================================================

    "custom/network": {
        "return-type": "json",
        "tooltip": true,
        "tooltip-format": "LMB: wifitui\nRMB: WiFi ON\nMMB: WiFi OFF",
        "on-click": "uwsm-app -- kitty --class wifitui -e wifitui",
        "on-click-right": "systemctl --user restart network_meter.service && nmcli radio wifi on && notify-send 'Turned ON WiFi'",
        "on-click-middle": "nmcli radio wifi off && notify-send 'Turned OFF WiFi'",
        "interval": 2, // Optimized from 1s to 2s
        "exec": "$HOME/user_scripts/waybar/network/network_meter_calling.sh --vertical"
    },

    "custom/notification": {
        "tooltip-format": "Left: Notifications\nRight: Do not disturb",
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "command -v swaync-client", // POSIX compliant check
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    "custom/inhibit-suspend": {
        "format": "{}",
        "exec": "if pgrep -x 'hypridle' > /dev/null; then echo '{\"text\": \"Û∞åæ\", \"tooltip\": \"Suspend is enabled. Click to disable.\", \"class\": \"enabled\"}'; else echo '{\"text\": \"Ôî™\", \"tooltip\": \"Suspend is disabled. Click to enable.\", \"class\": \"disabled\"}'; fi",
        "return-type": "json",
        "interval": 5,
        "signal": 9,
        "on-click": "uwsm-app -- \"$HOME/user_scripts/waybar/toggle_hypridle.sh\"",
        "escape": true
    },

    "custom/theme": {
        "format": "Óèú",
        "tooltip": true,
        "tooltip-format": "Switch wallpapers\nLMB: Dark Mode\nRMB: Light Mode\nMMB: Waypaper",
        "on-click": "uwsm-app -- \"$HOME/user_scripts/theme_matugen/theme_ctl.sh\" set --mode dark",
        "on-click-right": "uwsm-app -- \"$HOME/user_scripts/theme_matugen/theme_ctl.sh\" set --mode light",
        "on-click-middle": "uwsm-app -- waypaper"
    },

    "custom/app-tray": {
        "format": "Ôêé",
        "tooltip-format": "Open Terminal App Tray!",
        "on-click": "uwsm-app -- kitty --class tray-tui -e tray-tui"
    },

    "custom/power": {
        "format": "ÔÄë",
        "tooltip": true,
        "tooltip-format": "Power Menu",
        "on-click": "uwsm-app -- \"$HOME/user_scripts/wlogout/wlogout_scale.sh\""
    },
    
    "tray": {
        "icon-size": 18,
        "show-passive-items": true,
        "spacing": 1, 
        "rotate": 90
    }
}
